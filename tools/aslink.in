#! /bin/sh
set -e
TEST_ARCH=${1:?}
shift

case $TEST_ARCH in
  mtalpha)
    AS=@AS_MTALPHA@
    LD=@LD_MTALPHA@
    ;;
  mtsparc)
    AS=@AS_MTSPARC@
    LD=@LD_MTSPARC@
    ;;
  mips)
    AS=@AS_MIPS@
    LD=@LD_MIPS@
    ;;
  mipsel)
    AS=@AS_MIPSEL@
    LD=@LD_MIPSEL@
    ;;
  *)
    echo "$0: $TEST_ARCH: unknown architecture" >&2; exit 1 ;;
esac

src=
obj=
target=a.out
for arg in "$@"; do
  if test -n "$prev_arg"; then
     eval "$prev_arg=\$arg"
     prev_arg=
     continue
  fi
  case $arg in
    *.s) src="$src $arg" ;;
    *.o) obj="$obj $arg" ;;
    -o) prev_arg=target ;;
    *) echo "$0: don't know what to do with $arg" >&2; exit 1 ;;
  esac
done

tmpdir=$(mktemp -d -t aslink.XXXXXXXX)
toclean=
cleanup() {
  if test -z "$KEEP"; then
    for i in $toclean; do
      rm -f $i
    done      
    rm -rf "$tmpdir"
  else
    for i in $toclean $tmpdir; do 
      echo "$0: left over temporary: $i" >&2
    done
  fi
}
trap cleanup 0 ERR INT TERM QUIT

for f in $src; do
  of=$(echo $(dirname "$f")/$(basename "$f" .s)|tr '/.:' '___').o
  toclean="$toclean $of"
  "$AS" -o "$of" "$f"
  obj="$obj $of"
done

"$LD" -e main -Ttext 0x10000 -o "$target" $obj
